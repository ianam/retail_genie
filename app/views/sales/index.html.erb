<h1>Sales Index</h1>

<h2>Sample Chart</h2>
<h3>Car Sales in Manitoba in 2017 (per month)</h3>

<div class="row">
    <div class="chart" data-sales='<%= raw @sale.to_json %>'></div>
</div>
<br> 

<table class="table">
    <tr>
        <th>Month</th>
        <th>Revenue ($)</th>
    </tr>
    <% @sale.each do |key, value| %>
        <tr>
            <td><%= key %></td>
            <td><%= value %></td>
        </tr>
    <% end %>
</table>