<h1>Sales Index</h1>

<h2><%= @company.name %> Sales Data:</h2>

<table class="table">
    <tr>
        <th>Year</th>
        <th>Month</th>
        <th>Revenue ($)</th>
        <th>Action</th>
    </tr>
    <% @sales.each do |sale| %>
        <tr>
            <td><%= sale.year %></td>
            <td><%= sale.month %></td>
            <td><%= sale.value %></td>
            <td>
                <%= link_to("Edit", edit_sale_path(sale), {:class => "btn btn-outline-primary ml-3", :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#editSaleModal'}) %>
                <%= link_to "Delete", sale_path(sale), method: :delete %>
            </td>
        </tr>
    <% end %>
</table>

<!-- Modal -->
    <div class="modal fade" id="editSaleModal" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="saleEdit">Edit Sale</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>