<!DOCTYPE html>
<html>
  <head>
    <title>RetailGenie</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">RetailGenie</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/sales">Sales Data</a>
            </li>
            <% if current_user.present? %>
              <span class="mt-2">Hi, <%= current_user.first_name %>!</span>
              <li class="nav-item">
                <%= link_to 'My Account', user_path(current_user), class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Out', session_path, method: :delete, class: 'nav-link' %>
              </li>
            <% else %>
              <li class="nav-item">
                <a class="nav-link" href="/session/new">Sign In</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/new">Sign Up</a>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
      </header>

    <div class="container">
    <%= yield %>
    </div>

    <footer class="page-footer font-small bg-light">
      <div class = "footer-copyright text-center py-3">&copy; 2018 Copyright Iana Markevitch</div>
    </footer>
  </body>
</html>
