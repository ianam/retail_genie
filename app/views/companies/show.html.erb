<h1><%= @company.name %></h1>

<h2><%= @company.industry.name %></h2>

<% if @company.subindustry %>
    <h3><%= @company.subindustry.name %></h3>
<% end %>

<hr>
    <%= link_to 'Add Your Company Data', new_sale_path, class: 'btn btn-success'%>
    <%= link_to 'View Sales Data', sales_path, class: 'btn btn-primary'%>
<hr>

<h4>
<% if @company.subregion %>
    <%= @company.subregion.name%>,
<% end %>
<%= @company.region.name %>
</h4>

<h5><%= @company.industry.name %> Overview for 2017:</h5>

<div class="row" style="width: 600px">
    <canvas id="single-chart" data-sales='<%= raw @data.to_json %>'></canvas>
</div>

<div class="row">
    <canvas id="dual-chart" data-sales='<%= raw @sales.to_json %>'></canvas>
</div>

<h3><%= @company.name %> total sales for 2017: $<%= @total_sales%></h3>
<h3><%= @company.name %> average monthly sales for 2017: $<%= @avg_sales%></h3>
<h3>Other stuff: best month, worst month, growth 2016-2017, trend over 2017</h3>

<table class="table">
    <tr>
        <th>Month</th>
        <th>Revenue ($)</th>
    </tr>
    <% @data.each do |key, value| %>
        <tr>
            <td><%= key %></td>
            <td><%= value %></td>
        </tr>
    <% end %>
</table>